import { View, Text, ScrollView, RefreshControl } from 'react-native';
import { useState, useEffect, useCallback } from 'react';
import { useNavigation } from '@react-navigation/native';
import { Ionicons } from '@expo/vector-icons';
import { useAuth } from '../hooks/useAuth';
import { useRoles } from '../hooks/useRoles';
import { Card } from '../components/ui/Card';
import { routesAPI, driversAPI, passengersAPI } from '../api/client';
import { Route, Driver, Passenger } from '../types';
import { RouteCard } from '../components/cards/RouteCard';

export default function HomeScreen() {
  const { user } = useAuth();
  const { roles, isChofer, isPasajero } = useRoles();
  const [routes, setRoutes] = useState<Route[]>([]);
  const [driverCount, setDriverCount] = useState(0);
  const [passengerCount, setPassengerCount] = useState(0);
  const [refreshing, setRefreshing] = useState(false);

  const loadData = useCallback(async () => {
    try {
      const [routesRes, driversRes, passengersRes] = await Promise.all([
        routesAPI.getAll(),
        driversAPI.getAll().catch(() => ({ data: [] })),
        passengersAPI.getAll().catch(() => ({ data: [] })),
      ]);
      setRoutes(routesRes.data?.slice(0, 5) || []);
      setDriverCount(driversRes.data?.length || 0);
      setPassengerCount(passengersRes.data?.length || 0);
    } catch (err) {
      console.error('Error cargando datos home:', err);
    }
  }, []);

  useEffect(() => {
    loadData();
  }, [loadData]);

  const onRefresh = useCallback(async () => {
    setRefreshing(true);
    await loadData();
    setRefreshing(false);
  }, [loadData]);

  const capitalize = (str: string) => str.charAt(0).toUpperCase() + str.slice(1);
  const rolActual = roles.length > 0
    ? roles.map(r => capitalize(r.tipo)).join(' y ')
    : 'Sin rol';

  return (
    <ScrollView
      className="flex-1 bg-gray-100"
      refreshControl={<RefreshControl refreshing={refreshing} onRefresh={onRefresh} colors={['#3b82f6']} />}
    >
      <View className="px-4 pt-4 pb-8">
        {/* Saludo */}
        <View className="bg-blue-950 rounded-2xl p-5 mb-4">
          <Text className="text-white text-2xl font-bold">
            Hola, {user?.nombre || user?.username || 'Usuario'} ðŸ‘‹
          </Text>
          <Text className="text-blue-300 text-base mt-1">
            Rol: {rolActual}
          </Text>
        </View>

        {/* Stats */}
        <View className="flex-row gap-3 mb-4">
          <Card className="flex-1">
            <View className="items-center py-2">
              <View className="w-12 h-12 rounded-full bg-blue-100 items-center justify-center mb-2">
                <Ionicons name="car" size={24} color="#1e3a5f" />
              </View>
              <Text className="text-2xl font-bold text-blue-950">{driverCount}</Text>
              <Text className="text-gray-500 text-xs">Choferes</Text>
            </View>
          </Card>
          <Card className="flex-1">
            <View className="items-center py-2">
              <View className="w-12 h-12 rounded-full bg-green-100 items-center justify-center mb-2">
                <Ionicons name="people" size={24} color="#166534" />
              </View>
              <Text className="text-2xl font-bold text-blue-950">{passengerCount}</Text>
              <Text className="text-gray-500 text-xs">Pasajeros</Text>
            </View>
          </Card>
          <Card className="flex-1">
            <View className="items-center py-2">
              <View className="w-12 h-12 rounded-full bg-orange-100 items-center justify-center mb-2">
                <Ionicons name="map" size={24} color="#c2410c" />
              </View>
              <Text className="text-2xl font-bold text-blue-950">{routes.length}</Text>
              <Text className="text-gray-500 text-xs">Rutas</Text>
            </View>
          </Card>
        </View>

        {/* Mis Roles */}
        {roles.length > 0 && (
          <View className="mb-4">
            <Text className="text-lg font-bold text-blue-950 mb-2">Mis Roles</Text>
            <View className="flex-row gap-3">
              {isChofer && (
                <View className="flex-1 bg-blue-50 border border-blue-200 rounded-xl p-4 flex-row items-center">
                  <Ionicons name="car" size={24} color="#1e3a5f" />
                  <View className="ml-3">
                    <Text className="font-bold text-blue-950">Chofer</Text>
                    <Text className="text-blue-700 text-xs">Activo</Text>
                  </View>
                </View>
              )}
              {isPasajero && (
                <View className="flex-1 bg-green-50 border border-green-200 rounded-xl p-4 flex-row items-center">
                  <Ionicons name="person" size={24} color="#166534" />
                  <View className="ml-3">
                    <Text className="font-bold text-green-800">Pasajero</Text>
                    <Text className="text-green-600 text-xs">Activo</Text>
                  </View>
                </View>
              )}
            </View>
          </View>
        )}

        {/* Rutas recientes */}
        <Text className="text-lg font-bold text-blue-950 mb-2">Rutas Disponibles</Text>
        {routes.length === 0 ? (
          <Card>
            <View className="items-center py-6">
              <Ionicons name="map-outline" size={40} color="#9ca3af" />
              <Text className="text-gray-400 mt-2">No hay rutas disponibles</Text>
            </View>
          </Card>
        ) : (
          routes.map((route) => (
            <RouteCard key={route.id} route={route} />
          ))
        )}
      </View>
    </ScrollView>
  );
}
